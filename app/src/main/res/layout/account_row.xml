<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/active_image"
            android:src="@mipmap/ic_active"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent" />

        <TextView
            android:text="# Accound ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/account_id_text"
            android:layout_below="@+id/active_image"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:text="Active From"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/active_from_text"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/active_image"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:text="Category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/category__text"
            android:layout_below="@+id/account_id_text"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:text="Expiry Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/expiry_date_text"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/active_from_text"
            android:layout_marginBottom="10dp"/>

        <View
            android:id="@+id/account_separator"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#90909090"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/category__text"/>
        <TextView
            android:text="Balance:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/balance_tag"
            android:layout_below="@+id/account_separator"
            android:layout_marginBottom="2dp"/>
        <TextView
            android:text="Balance:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/balance_text"
            android:layout_below="@+id/balance_tag"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:text="Name:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_tag"
            android:layout_below="@+id/account_separator"
            android:layout_centerInParent="true"
            android:layout_marginBottom="2dp"/>
        <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_text"
            android:layout_below="@+id/name_tag"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:text="Type:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/type_tag"
            android:layout_below="@+id/account_separator"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="2dp"/>
        <TextView
            android:text="Type:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/type_text"
            android:layout_below="@+id/type_tag"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:text="Initial Balance:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/initial_balance_tag"
            android:layout_below="@id/balance_text"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:text="Initial Balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/initial_balance_text"
            android:layout_below="@id/initial_balance_tag"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:text="Reserved Balance:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reserved_balance_tag"
            android:layout_below="@id/balance_text"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:text="Reserved Balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reserved_balance_text"
            android:layout_alignParentRight="true"
            android:layout_below="@id/initial_balance_tag"
            android:layout_marginBottom="10dp"/>

        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:id="@+id/balance_separator"
            android:background="#90909090"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/initial_balance_text"/>

        <TextView
            android:text="# Currency ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currency_id_text"
            android:layout_below="@+id/balance_separator"
            android:layout_marginTop="10dp"/>
        <TextView
            android:text="# ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_text"
            android:layout_below="@+id/balance_separator"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"/>
        <TextView
            android:text="Mantissa:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mantissa_tag"
            android:layout_below="@+id/currency_id_text"
            android:layout_marginTop="10dp"/>

        <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_unit_tag"
            android:layout_below="@+id/mantissa_tag"
            android:layout_marginTop="10dp"/>

        <TextView
            android:text="Relacion:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relation_unit_text"
            android:layout_below="@+id/name_unit_tag"
            android:layout_marginTop="10dp"/>

        <TextView
            android:text="Mantissa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mantissa_text"
            android:layout_above="@+id/name_unit_text"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_unit_text"
            android:layout_alignBaseline="@+id/name_unit_tag"
            android:layout_alignBottom="@+id/name_unit_tag"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>